// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  password String
  phone    String
  Animal   Animal[]
}

model Animal {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  city  String
  state String

  CEP     String
  details String

  tutorName  String
  tutorEmail String
  tutorPhone String

  publishedAt DateTime
  photos      String[]
  type        String

  tutorId String @unique @db.ObjectId
  user    User?  @relation(fields: [tutorId], references: [id])
}
